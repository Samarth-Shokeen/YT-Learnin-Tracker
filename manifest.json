{
  "manifest_version": 3,
  "name": "YouTube Learning Tracker",
  "version": "1.0",
  "description": "Track YouTube learning progress, get summaries, and view analytics.",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
